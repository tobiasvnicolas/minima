{
  "name": "minima-backend",
  "version": "1.0.0",
  "description": "Backend API for Minima project",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'Build completed - no transpilation needed for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "api",
    "node",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "nodemon": "3.0.1",
    "supertest": "6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testResultsProcessor": "jest-junit"
  },
  "jest-junit": {
    "outputDirectory": "coverage",
    "outputName": "junit.xml"
  }
}
